@using System.Activities.Statements
<nav class="top-bar">
    <div class="wrapper">
        <a class="navbar-brand" href="/">
            Mixtr
        </a>
        <div class="navbar-actions">
            
            
            <button id="navbar_addPlaylistBtn" 
                    class="btn btn btn-outline-light" 
                    data-toggle="modal" 
                    data-target="@(User.Identity.IsAuthenticated? "#new-post-modal" : "")">
                @if (User.Identity.IsAuthenticated)
                {
                    @("New post");
                }
                else
                {
                    @Html.ActionLink("New Post", "Login", "Account", null, new {@class="top-bar__new-post-anchor"} );
                }
            </button>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</nav>

