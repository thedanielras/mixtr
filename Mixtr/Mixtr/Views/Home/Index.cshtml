@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Mixter";
}

<div id="alerts-container" style="z-index:998;position:fixed;top:20px;left:0;width:100%;padding:0 20%;"></div>
<div id="rollBar"></div>
<div id="add-playlist-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Playlist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form-add-playlist" method="post" action="/Home/AddPlaylist">
                    <div class="form-group">
                        <label for="input-playlist-name">Name</label>
                        <input type="email" class="form-control" id="input-playlist-name" placeholder="Enter Name" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="input-playlist-url">Url</label>
                        <input type="text" class="form-control" id="input-playlist-url" placeholder="Url" name="Url">
                    </div>
                    <div class="form-check">
                        @Html.CheckBox("IsSingleTrack")
                        @Html.Label("IsSingleTrack", "Is single video?")
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="$('#form-add-playlist').submit();">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>